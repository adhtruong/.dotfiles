#!/usr/bin/env bash

# Janky border highlighting script for Aerospace nav mode
# This script uses the macOS borders app to highlight the focused window

BORDER_WIDTH=5
BORDER_COLOR="0xFFFFFFFF"          # White color
BORDER_INACTIVE_COLOR="0x00000000" # Transparent color

show_border() {
	borders active_color="$BORDER_COLOR" inactive_color="$BORDER_INACTIVE_COLOR" width="$BORDER_WIDTH" &
}

hide_border() {
	borders active_color="$BORDER_INACTIVE_COLOR" inactive_color="$BORDER_INACTIVE_COLOR" width="0" &
}

function main() {
	case "$1" in
	"show")
		show_border
		;;
	"hide")
		hide_border
		;;
	*)
		echo "Usage: $0 {show|hide}"
		exit 1
		;;
	esac
}

main "$@"
