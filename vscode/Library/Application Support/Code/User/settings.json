{
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": true,
  "workbench.activityBar.location": "top",
  "workbench.activityBar.orientation": "vertical",
  "editor.cursorSurroundingLines": 8,

  "terminal.integrated.minimumContrastRatio": 1,

  "[html]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "git.ignoreWindowsGit27Warning": true,
  "go.toolsManagement.autoUpdate": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  "terminal.integrated.macOptionIsMeta": true,

  "redhat.telemetry.enabled": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "basedpyright.analysis.inlayHints.callArgumentNames": false,
  "basedpyright.analysis.inlayHints.functionReturnTypes": false,
  "basedpyright.analysis.inlayHints.variableTypes": false,
  "basedpyright.analysis.typeCheckingMode": "standard",

  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "always"
  },

  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },

  "python.testing.pytestEnabled": true,
  "[glsl]": {
    "editor.defaultFormatter": "nolanderc.glsl-analyzer"
  },
  "vim.handleKeys": {
    "<C-p>": false,
    "<C-w-j>": false,
    "<C-shift-k>": false,
    "<C-shift-tab>": false,
    "<C-tab>": false
  },
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "p", "i"],
      "commands": ["editor.action.peekImplementation"]
    },
    {
      "before": ["g", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["g", "p", "t"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [":"],
      "commands": ["vim.showQuickpickCmdLine"],
      "silent": true
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.nextInFiles"],
      "silent": true
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prevInFiles"],
      "silent": true
    },
    // Debugger bindings
    {
      "before": ["g", "b", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    },
    {
      "before": ["g", "b", "B"],
      "commands": ["editor.debug.action.conditionalBreakpoint"]
    },
    {
      "before": ["g", "b", "c"],
      "commands": ["workbench.action.debug.continue"]
    },
    {
      "before": ["g", "b", "i"],
      "commands": ["workbench.action.debug.stepInto"]
    },
    {
      "before": ["g", "b", "o"],
      "commands": ["workbench.action.debug.stepOver"]
    },
    {
      "before": ["g", "b", "O"],
      "commands": ["workbench.action.debug.stepOut"]
    },
    {
      "before": ["g", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["g", "S"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["g", "."],
      "commands": ["workbench.action.quickFix"]
    }
  ],
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.showMarksInGutter": true,
  "keyboard.dispatch": "keyCode",
  "editor.lineNumbers": "relative",

  "periscope.rgOptions": ["--hidden", "--smart-case", "--ignore-vcs"],
  "periscope.rgGlobExcludes": ["**/.git/**"],

  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "'MesloLGS Nerd Font', Menlo, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "'MesloLGS Nerd Font'",

  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.enablePersistentSessions": false,
  "makefile.configureOnOpen": true,
  "workbench.startupEditor": "none",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
  },

  "shellformat.flag": "-i 0"
}
